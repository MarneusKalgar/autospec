/***********************MAIN***********************/
.main
	position relative
	flex 1
	z-index 100
	padding-bottom 8%
	color $base-text-color-light

	&__title
		position relative
		z-index 200
		box-sizing border-box
		margin calc(100vh - 55vh) 5% 0 13.5%
		font-size 3rem
		line-height 1.3
		font-weight normal
		opacity 0
		animation fadeInTitle 1.5s ease 3s forwards
		@media screen and (max-height: 700px)
			margin calc(100vh - 65vh) 0 0 8%
		@media screen and (max-width: 1050px) and (min-width: 601px)
			font-size 2.5rem
			padding-right .5em
		@media screen and (max-width: $media-md)
			margin calc(100vh - 65vh) auto 0
			font-size 9vw
			text-align center
		@media screen and (max-width: 750px) and (orientation: landscape)
			font-size 5.5vw
			text-align center
		@media screen and (max-width: 500px)
			margin-left auto
			margin-right auto

	&__thin
		color $base-decor-color
		font-weight normal

	&__bold
		font-weight bold

	&__btn
		position relative
		//z-index -1
		margin 7% 10% 0 calc(100vw - 52.5vw)
		transform-origin 50% 0 0
		//transform scaleY(0)
		opacity 0
		animation slideBtn 2s ease-in 2s forwards
		@media screen and (max-width: 1200px)
			margin-left calc(100vw - 70vw)
		@media screen and (max-width: $media-md) and (orientation: portrait)
			//margin 30% auto 0
			margin calc(50vmax - 60%) auto 0
		@media screen and (max-width: 750px) and (orientation: landscape)
			margin 5% auto 0
			font-size 5vw
		@media screen and (min-width: 750px) and (max-width: 1025px)  and (orientation: landscape)
			margin 15% auto 0

	&__image
		position absolute
		top 0
		left 0
		z-index 10
		width 100%
		height 100%
		background url("../img/main/main-bg.jpg") 0 0 no-repeat
		background-size cover
		opacity 0
		animation fadeInBg 1s ease 2s forwards

	&__bg
		position absolute
		top 0
		left 0
		z-index -1
		width 100%
		height 100%
		overflow hidden

	&__panel
		float left
		position relative
		width 20%
		height 100%
		background-color #1f282a
		transform-origin left
		opacity 0

		&--one
			background-position 0 0
			animation slidePanel1 1.5s forwards

		&--two
			background-position 24% 0
			animation slidePanel2 1.5s forwards
			animation-delay .1s

		&--three
			background-position 48% 0
			animation slidePanel3 1.5s forwards
			animation-delay .2s

		&--four
			background-position 72% 0
			animation slidePanel4 1.5s forwards
			animation-delay .3s

		&--five
			background-position 100% 0
			animation slidePanel5 1.5s forwards
			animation-delay .4s


	//background image
@keyframes fadeInBg
	0%
		opacity 0
	100%
		opacity 1

	//panels
@keyframes slidePanel1
	0%,
	7%
		transform scaleX(0)
		opacity 0
	37%,
	100%
		opacity 1
		transform scaleX(100%)

@keyframes slidePanel2
	0%,
	14%
		transform scaleX(0)
	44%,
	100%
		opacity 1
		transform scaleX(100%)

@keyframes slidePanel3
	0%,
	19%
		transform scaleX(0)
	51%,
	100%
		opacity 1
		transform scaleX(100%)

@keyframes slidePanel4
	0%,
	26%
		transform scaleX(0)
	58%,
	100%
		opacity 1
		transform scaleX(100%)

@keyframes slidePanel5
	0%,
	33%
		transform scaleX(0)
	65%,
	100%
		opacity 1
		transform scaleX(100%)

	//title
@keyframes fadeInTitle
	0%
		opacity 0
	100%
		opacity 1

	//btn
@keyframes slideBtn
	0%,
	50%
		transform: scaleY(0)
		opacity: 0
	100%
		transform: scaleY(100%)
		opacity: 1