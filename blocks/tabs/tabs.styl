/***********************TABS***********************/
.tabs
	position relative
	width 65.21739%
	height 40em
	margin 0
	animation-duration 2s
	animation-delay 0s
	@media screen and (max-width: 1199px)
		width 46.875em
		margin 0 auto
	@media screen and (max-width: 779px)
		width 100%
		height 35em
	@media screen and (max-width: 584px)
		margin-top 2em


		//tab-menu
	&__menu
		position absolute
		top 1.5em
		right 4.5em
		z-index 100
		margin 0
		padding 0
		list-style none
		font-size 1em
		letter-spacing .05em
		line-height 2.4
		@media screen and (max-width: 779px)
			right 1em
		@media screen and (max-width: 584px)
			right 0
			top -4em
			width 100%

	&__tab
		position relative
		box-sizing border-box
		text-transform uppercase
		cursor pointer
		transition all .4s ease-in .1s
		&::before
			content ''
			position absolute
			width 100%
			height 2px
			bottom .2em
			background-color rgba(0,0,0,0)
			transition all .4s ease-in .1s
		@media screen and (max-width: 779px)
			margin-top .5em
		@media screen and (max-width: 584px)
			display inline-block
			margin-right 4%
			&:last-child
				margin-right 0

		&--active
			color $base-decor-color
			&::before
				background-color $base-decor-color

		//tabs-item
	&__item
		position absolute
		top 0
		left 0
		opacity 0
		visibility hidden
		transition all .5s ease
		@media screen and (max-width: 479px)
			width 100%

		&--active
			opacity 1
			visibility visible
			transition all .5s ease

	&__subtitle
		margin 0
		@media screen and (max-width: 459px)
			font-size 2em

	&__info
		width 25.625em
		margin 0
		@media screen and (max-width: 584px)
			width 100%

	&__figure
		position relative
		width 36.25em
		height 21.25em
		margin 6.5em 0 0 4.5em
		@media screen and (max-width: 779px)
			width @width * .7
			height @height * .7
			margin-left 1.5em
		@media screen and (max-width: 479px)
			width 100%
			margin 2em 0 0


	&__img
		display block
		width 100%
		height auto
		@media screen and (max-width: 479px)
			display none

	&__list
		margin 0
		padding 0
		list-style none


	&__service
		position absolute
		width 6em
		cursor pointer
		transition all .2s ease
		transform translate(0, 0) scale(1)
		@media screen and (max-width: 479px)
			position relative
			box-sizing border-box
			width 100%
			margin 1em 0 0 3em

		&--isSelected
			.tabs__caption
				color $base-decor-color
			.tabs__dot
				&::before
					background url("data:image/svg+xml;base64,") center no-repeat
					background-size 40%
				&::after
					transform translate(-50%,-50%) scale(1.6)

		&:nth-child(1)
			top -17%
			left 32%
			.tabs__line
				width 11em
			.tabs__pointer
				width 2em
				bottom .7em
				left 10.7em
				transform rotateZ(45deg)
			.tabs__dot
				left 190%
				bottom -35%
			@media screen and (max-width: 779px)
				top -35%
				left 25%
				.tabs__line
					width 6em
				.tabs__pointer
					left 5.3em
					bottom -.1em
					width 4em
					transform rotateZ(48deg)
				.tabs__dot
					left 8em
					bottom -3em
			@media screen and (max-width: 479px)
				top 0
				left 0
				width 100%
				.tabs__dot
					left -3em
					bottom .3em

		&:nth-child(2)
			top 4%
			left 4.5%
			.tabs__line
				width 5.5em
			.tabs__pointer
				width 3em
				bottom .32em
				left 5em
				transform rotateZ(45deg)
			.tabs__dot
				left 115%
				bottom -60%
			@media screen and (max-width: 779px)
				top -18%
				left 0
				.tabs__pointer
					width 5em
					bottom -1em
					left 3.8em
					transform rotateZ(72deg)
				.tabs__dot
					left 6em
					bottom -4.5em
			@media screen and (max-width: 479px)
				top 0
				left 0
				width 100%
				.tabs__dot
					left -3em
					bottom .3em

		&:nth-child(3)
			top 35%
			left -12.5%
			.tabs__line
				width 5em
			.tabs__pointer
				width 3.3em
				bottom .3em
				left 4.6em
				transform rotateZ(40deg)
			.tabs__dot
				left 115%
				bottom -60%
			@media screen and (max-width: 779px)
				top 13%
				left -7%
				.tabs__pointer
					width 4.5em
					bottom -.75em
					left 3.4em
					transform rotateZ(75deg)
				.tabs__dot
					left 5em
					bottom -4em
			@media screen and (max-width: 479px)
				top 0
				left 0
				width 100%
				.tabs__dot
					left -3em
					bottom .3em

		&:nth-child(4)
			top 93%
			left -12.5%
			.tabs__line
				width 5.5em
			.tabs__pointer
				width 6.5em
				bottom 4.1em
				left 3.9em
				transform rotateZ(-58deg)
			.tabs__dot
				left 135%
				bottom 155%
			@media screen and (max-width: 779px)
				top 105%
				left -7%
				.tabs__pointer
					width 5em
					bottom 3.9em
					left 3.3em
					transform rotateZ(-83deg)
				.tabs__dot
					left 5.2em
					bottom 6em
			@media screen and (max-width: 479px)
				top 0
				left 0
				width 100%
				.tabs__dot
					left -3em
					bottom .3em

		&:nth-child(5)
			top 93%
			left 70%
			.tabs__line
				left -1em
				width 6em
			.tabs__pointer
				width 6.5em
				bottom 3.65em
				left -6.5em
				transform rotateZ(45deg)
			.tabs__dot
				left -100%
				bottom 115%
			@media screen and (max-width: 779px)
				top 105%
				left 65%
				.tabs__pointer
					width 6em
					bottom 4em
					left -5.5em
					transform rotateZ(60deg)
				.tabs__dot
					left -5em
					bottom 6em
			@media screen and (max-width: 479px)
				top 0
				left 0
				width 100%
				.tabs__dot
					left -3em
					bottom .3em

		&:nth-child(6)
			top 70%
			left 100%
			.tabs__line
				left -2em
				width 7em
			.tabs__pointer
				width 6em
				bottom 3.5em
				left -7.1em
				transform rotateZ(45deg)
			.tabs__dot
				left -110%
				bottom 115%
			@media screen and (max-width: 779px)
				top 80%
				left 88%
				.tabs__line
					width 6em
				.tabs__pointer
					width 5.5em
					bottom 4em
					left -5.7em
					transform rotateZ(70deg)
				.tabs__dot
					left -4.5em
					bottom 5em
			@media screen and (max-width: 479px)
				top 0
				left 0
				width 100%
				.tabs__dot
					left -3em
					bottom .3em

	&__caption
		display block
		font-weight bold
		line-height 1.2
		transition all .2s ease
		transform translate(0, 0) scale(1)
		@media screen and (max-width: 779px) and (min-width: 480px)
			font-size .875em

	&__price
		@media screen and (max-width: 779px) and (min-width: 480px)
			font-size .875em
		
	&__line
		position absolute
		bottom 1.4em
		display block
		height 1px
		background-color $base-decor-color
		transform translate(0, 0) scale(1)
		@media screen and (max-width: 479px)
			display none

	&__pointer
		display block
		position absolute
		height 1px
		background-color $base-decor-color
		transform translate(0, 0) scale(1)
		@media screen and (max-width: 479px)
			display none

	&__dot
		display block
		position absolute
		z-index 200
		width 2em
		height 2em
		border-radius 50%
		background-color $base-decor-color
		transition all .2s ease
		&::before
			content ''
			position absolute
			z-index 500
			top 0
			left 0
			right 0
			bottom 0
			border-radius 50%
			background url("data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHZpZXdCb3g9IjAgMCA0MiA0MiIgZmlsbD0iI2VlNjgwMCIgc3Ryb2tlPSIjZWU2ODAwIiBzdHJva2Utd2lkdGg9IjUiIHdpZHRoPSI1MTIiIGhlaWdodD0iNTEyIj48cGF0aCBkPSJNNDIgMjBIMjJWMGgtMnYyMEgwdjJoMjB2MjBoMlYyMmgyMCIvPjwvc3ZnPg==") center no-repeat
			background-size 25%
			//transition all .4s ease
		&::after
			content ''
			position absolute
			z-index 300
			top 50%
			left 50%
			width 1em
			height 1em
			transform-origin 50% 50% 0
			transform translate(-50%,-50%)
			border-radius 50%
			background-color #fff
			transition all .3s ease