/*******************advantages******************/
.advantages
	position: relative
	min-height 35em
	margin-top: 3em;
	&::after
		content: "";
		position: absolute
		top: 0
		left: 0
		width: 100%
		height: 100%
		background: rgba($base-overlay-element-color, .5)

	&--range1
		background: url("../img/advantages/advantages-bg.jpg") center no-repeat;
		background-size: cover

	&--range2
		background: url("../img/advantages/advantages-bg2.jpg") center no-repeat;
		background-size: cover


	&__wrap
		width $base-wrap-element-width
		margin 0 auto
		@media screen and (max-width: 1199px)
			box-sizing border-box
			width 100%
			padding 0 1.25em

	&__content
		position: relative
		z-index: 200
		width: 45%
		min-width 30em
		padding-top: 3em;
		color $base-text-color-light

	&__desc
		font-size: 1.25em
		line-height: 1.7;