/*!******************MENU-BTN******************/
.menu-btn
	position relative
	z-index 1100
	width 1.8rem
	height 1.8rem
	padding 0
	border none
	background rgba(0,0,0,0)
	font-size 0
	appearance none
	border-radius none
	cursor pointer
	transform translateX(0)
	transition transform .3s
	&:focus
		outline none
	@media screen and (min-width: 940px)
		display none

	&--isActive
		transform translateX(-21rem)
		transition transform .3s
		//background url("../img/sidebar/sidebar-bg.jpg") 0 0 no-repeat;

	&__icon
		width 100%
		height 100%
		fill $base-decor-color