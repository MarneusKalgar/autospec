/*!******************MENU-BTN******************/
.menu-btn
	position relative
	z-index 2000
	width 1.8rem
	height 1.8rem
	padding 0
	border none
	background url('data:image/svg+xml;base64,')
	font-size 0
	appearance none
	border-radius none
	cursor pointer
	transform translateX(0)
	opacity 0
	transition transform .3s, opacity .4s ease
	animation fadeInBtn 2s ease 3s forwards
	&:focus
		outline none
	@media screen and (min-width: 940px)
		display none
	@media screen and (max-width: $media-md)
		width 1.3rem
		height 1.3rem

	&--isActive
		transform translateX(-20.5rem)
		transition transform .3s
		background url('data:image/svg+xml;base64,') 0 0 no-repeat;
		background-size cover
		@media screen and (max-width: $media-md)
			transform translateX(-16.5rem) //relative to sidebar width
		@media screen and (max-height: 400px)
			transform translateX(-25.8rem) //relative to sidebar width

	&--isTransparent
		transition opacity .4s ease
		opacity 0

@keyframes fadeInBtn
	0%
		opacity 0
	100%
		opacity 1