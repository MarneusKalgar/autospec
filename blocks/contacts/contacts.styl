/***********************CONTACTS***********************/
.contacts
	position relative
	flex 1
	padding 7em 6% 3% 7.5%
	box-sizing border-box
	font-size 1rem
	color $base-text-color-light
	background #2c3a3c
	overflow hidden
	@media screen and (max-height: 650px)
		overflow-y auto
	@media screen and (max-width: 750px)
		padding-top 5em
		padding-left 2.5em
		overflow-y auto

	&__title
		margin .85em 0 0

	&__address
		width 17.5em
		font-style normal

	&__row
		margin-top 1.5em
		&:nth-child(2)
			margin-top 1em
			line-height 2

	&__caption
		float left
		margin 0
		&:before
			left -1.5em
			top .25em
			width 1em
			height 1em

	&__link
		display block
		margin 0 0 0 5.3em
		color currentColor
		text-decoration none
		font-weight bold
		transition all .3s ease
		&:nth-of-type(2)
		&:nth-of-type(3)
			margin-top .7em

		&--mail
			margin-left 3em
			color $base-decor-color
			&:hover
			&:focus
				color lighten($base-decor-color, 10%)

	&__info
		margin 0 0 0 3.5em
		font-weight bold

	&__map
		position absolute
		right 0
		top 0
		width 50%
		height 100%
		background-color #dadada
		@media screen and (min-width: 941px) and (max-width: 1100px)
			width 40%
		@media screen and (max-width: 750px)
			top 30em
			left 2.5em
			width 80%
			height 70vh
			min-height 20em
			margin-bottom 2em
		@media screen and (max-width: 450px)
			top 28em