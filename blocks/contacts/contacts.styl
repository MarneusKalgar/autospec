/***********************CONTACTS***********************/
.contacts
	position relative
	flex 1
	padding 7em 6% 3% 4%
	box-sizing border-box
	font-size 1rem
	color $base-text-color-light
	background #2c3a3c
	overflow hidden
	@media screen and (max-height: 600px), (max-width: 1100px)
		overflow-y auto
	@media screen and (max-width: 750px)
		padding 5em 6% 2em 2.5em
	@media screen and (max-width: 480px)
		padding-left: 1.25em;

	&--isContacts_extended
		padding 1em 0 4em 0
		animation-duration 2s
		animation-delay 0s
		@media screen and (max-width: 1100px)
			padding-bottom 7em

	&__wrap
		width $base-wrap-element-width
		margin 0 auto
		@media screen and (max-width: 1199px)
			box-sizing border-box
			width 100%
			padding 0 1.25em

	&__title
		width: 6em
		margin .5em 0 0


		//address
	&__address-wrap
		width 70%
		min-width: 17.5em
		margin-top: 1em
		@media screen and (min-width: 768px)
			min-width 18.75em
			max-width 28em
			width: 50%
			height 25em
			overflow-y: auto
			overflow-x: hidden

	&__address
		box-sizing: border-box
		width 45%
		min-width 17.5em
		padding-right: 1em;
		padding-left: 2em;
		font-style normal
		@media screen and (max-width: 1100px)
			width: 30em;
		@media screen and (max-width: 600px)
			width: 100%
			padding-right: 0

		&--isScrollable
			padding-left: 2em;
			padding-right: 0
			width: 100%

		&--isContacts_extended
			margin-left 1.5em

	&__row
		display: flex
		align-items: flex-start
		justify-content: space-between
		margin-top 2em
		width: 100%

	&__col
		width: 50%

		&--full
			width: 100%

		&--info
			min-width: 7.5em
			margin-right: 2%
			@media screen and (max-width: 600px)
				width: 80%

		&--photo
			width: 30%
			max-width: 6.4em
			@media screen and (max-width: 600px)
				display: none


	&__photo
		width: 100%
		margin: -.5em 0 0
		padding: 0

	&__img
		display: block
		width: 100%
		max-width: 6.4em
		height: auto
		max-height: 6.4em
		margin: 0 auto
		border-radius: 50%;
		transform: scale(0.8)
		object-fit contain
		background-color: #fff;

	&__name
		margin-top: 0;
		text-align: center
		font-size: .875em;

	&__caption
		margin 0
		&:before
			left -1.5em
			top .25em
			width 1em
			height 1em

		&--phone
			float: none
			width: 100%

		&--location
			float: none
			width: 100%

	&__link
		display block
		margin 0
		color currentColor
		text-decoration none
		font-weight bold
		transition all .3s ease

		&--mail
			display: inline-block;
			min-width: 11em;
			color $base-decor-color
			&:hover
			&:focus
				color lighten($base-decor-color, 10%)

		&--vacancies
			position: relative
			display: inline-block
			padding-left: 2em;
			&:hover
			&:focus
				color $base-decor-color

	&__icon
		position: absolute
		top: .1em
		left: .3em
		width: 1.3em
		height: 1.3em
		fill $base-decor-color

	&__info
		margin 0
		font-weight bold


		//map
	&__map
		position absolute
		right 0
		top 0
		width 50%
		bottom 0
		background-color #dadada
		@media screen and (max-width: 1100px)
			position: relative
			top: 2em
			height 70vh
			min-height 20em
			width: 100%
			margin 0 0 2em

		&--overlay
			position absolute
			z-index 100
			min-height 40.5em
			@media screen and (max-width: 1100px)
				position relative
				width 100%
				min-height 19em
				height 19em
				margin-top 2em
			@media screen and (max-width: 750px)
				top 0
				left 0
				margin-bottom 0