/*******************SERVICES******************/
.services
	padding 3.125em 0 4.5em
	background $base-decor-color-light-grey url("../img/services/services-simple-bg.jpg") 0 0 no-repeat
	background-size cover
	animation-duration 2s
	animation-delay 0s

	&__wrap
		width $base-wrap-element-width
		margin 0 auto

	&__title
		margin 0

	&__list
		flex-container(row, wrap, flex-start, center)
		margin 0
		padding 0
		list-style none

	&__item
		position relative
		width 15.2em
		height 3.75em
		margin 6em 2.6em 0 0
		&::before
			content ''
			position absolute
			top -3.6em
			left 0
			width 3.125em
			height 3.125em
			background url("../img/services/services__sprite-lg.png") 0 0 no-repeat

		&:nth-child(2)::before
			background-position 0 -4em

		&:nth-child(3)::before
			background-position 0 -8.4em

		&:nth-child(4)::before
			background-position 0 -12.7em

		&:nth-child(5)::before
			background-position 0 -16.9em

		&:nth-child(6)::before
			background-position 0 -20.7em

		&:nth-child(7)::before
			background-position 0 -24.8em


	&__link
		display block
		width 100%
		height 100%
		font-size 1.5em
		font-weight bold
		color inherit
		line-height 1.2
		text-decoration none