/*******************SERVICES******************/
.services
	position relative
	flex 1
	flex-container(row,nowrap, center, center)
	padding 9.5em 2em 1% 5%
	font-size 1rem
	background-color #ebebeb
	overflow hidden
	@media screen and (max-height: 740px)
		padding-top 6.5em
	@media screen and (max-height: 600px), (max-width: 480px)
		overflow-y auto
		align-items flex-start
	@media screen and (min-width: 1051px) and (max-width: 1180px), (min-width: 701px) and (max-width: 830px)
		justify-content: flex-start
		padding-left: 1em
		padding-right: 1em
	@media screen and (min-width: 940px) and (max-width: 1050px), (max-width: 700px)
		justify-content: flex-start
		padding-left: 1em
		padding-right: 1em
	@media screen and (max-width: 560px)
		font-size .875rem
	@media screen and (max-width: 480px)
		display block
		padding-top 4em
		font-size 1.1rem
	@media screen and	(orientation: landscape)
		overflow-y auto

	&--isOverlay
		&::before
			content ""
			position absolute
			top 0
			left 0
			z-index 200
			width 100%
			height 100%
			background rgba(#000, .4)


		//container with image and items
	&__scheme
		position relative
		width 42em * 1.1
		height 27.25em * 1.1
		margin 0
		@media screen and (max-height: 740px)
			margin-top 1.5em
		@media screen and (min-width: 1051px) and (max-width: 1180px), (min-width: 701px) and (max-width: 830px)
			width 42em
			height 27.25em
			margin-left 1.5em
			transform scale(0.8)
		@media screen and (min-width: 940px) and (max-width: 1050px), (max-width: 700px)//, (max-height: 650px)
			width 42em * .8
			height 27.25em * .8
			transform scale(0.8)
		@media screen and (max-width: 715px)
			margin-left 0
			transform scale(0.9)
		@media screen and (max-width: 500px)
			transform scale(0.8)
		@media screen and (max-width: 480px)
			width 100%
			margin 0
			transform: none


	&__photo
		display block
		width 42em * 1.1
		height 27.25em * 1.1
		margin 0
		@media screen and (min-width: 1051px) and (max-width: 1180px), (min-width: 701px) and (max-width: 830px)
			width 42em
			height 27.25em
		@media screen and (min-width: 940px) and (max-width: 1050px), (max-width: 700px)
			width 42em * .8
			height 27.25em * .8
		@media screen and (max-width: 480px)
			display: none

	&__list
		position absolute
		top 0
		left 0
		bottom 0
		right 0
		margin 0
		padding 0
		list-style none
		@media screen and (max-width: 480px)
			position: static
			width 95%
			margin 0 auto
			padding-bottom: 1.25em;

	&__link
		position: absolute
		display block
		width: 100%
		left: 0
		bottom: 1.5em
		text-decoration none
		color inherit
		&::before
			content ''
			position absolute
			top -2em
			left 0
			width 2em
			height 2em
			background url("../img/services/services__sprite-lg.png") 0 0 no-repeat
			background-size 100%
		@media screen and (max-width: 480px)
			&::before
				top -2.5em
				left 50%
				transform: translateX(-50%)

	&__item
		position absolute
		width 10.5em
		height 3.6875em
		padding-top 2em
		font-weight bold
		line-height 1.1
		transition all .5s ease
		transform translate(0, 0) scale(1)
		text-decoration none
		color inherit
		will-change transform
		&:hover //styling effect progressive color filling
			.services__line:before
				width 0
				transition width .4s ease-in 0.6s
			.services__pointer:before
				width 0
				transition width .4s ease-in .2s
			.services__dot:before
				width 0
				transition width .2s ease-in
		@media screen and (max-width: 480px)
			position relative
			width 100%
			padding 1.5em 0
			text-align center
			border-bottom 1px solid lighten($base-text-color, 50%)
			&:last-child
				border-bottom none

			//styling effect progressive color filling for 3, 4, 5 and 6 item
		&:nth-child(3)
		&:nth-child(4)
		&:nth-child(5)
		&:nth-child(6)
			.services__line
			.services__dot
				background-color #2b3334
				z-index: 100
				&:before
					width 0
					background-color: $base-decor-color
					z-index: 0
			&:hover
				.services__line:before
				.services__dot:before
					width 100%

