	&__price
		display block
		position absolute
		bottom 0
		margin-top .5em
		font-weight normal
		@media screen and (max-width: 480px)
			left 50%
			bottom .2em
			transform: translateX(-50%)

	&__line
		display block
		position absolute
		left 0
		bottom 1.2em
		z-index 10
		height 1px
		background-color $base-decor-color
		&:before
			display block
			content ''
			position absolute
			left 0
			top 0
			z-index 100
			width 100%
			height 100%
			background-color #2b3334
			transition width .4s ease-in
		@media screen and (max-width: 480px)
			display: none

	&__pointer
		display block
		position absolute
		bottom 1.2em
		z-index 10
		height 1px
		background-color $base-decor-color
		transform-origin 0 0 0
		transition all .5s ease
		&:before
			position absolute
			content ''
			top 0
			left 0
			z-index 100
			width 100%
			height 100%
			background-color #2b3334
			transition width .4s ease-in .4s
		@media screen and (max-width: 480px)
			display: none

	&__dot
		display block
		position absolute
		z-index 10
		width 6px
		height 6px
		background-color $base-decor-color
		border-radius 50%
		transition all .5s ease
		&:before
			position absolute
			content ''
			top 0
			left 0
			z-index 100
			width 100%
			height 100%
			background-color #2b3334
			border-radius 50%
			transition width .2s ease-in 0.8s
		@media screen and (max-width: 480px)
			display: none
