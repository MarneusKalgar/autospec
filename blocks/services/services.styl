/*******************SERVICES******************/
.services
	position relative
	flex 1
	padding 9.5em 7.5% 1%
	font-size 1rem
	background-color #ebebeb
	overflow hidden
	@media screen and (max-height: 740px)
		padding-top 6.5em
	@media screen and (max-height: 650px), (max-width: 480px)
		overflow-y auto
	@media screen and (max-width: 1250px)
		padding-left 5%
	@media screen and (max-width: 560px)
		font-size .875rem
	@media screen and (max-width: 480px)
		padding-top 5em
		font-size 1.1rem
	@media screen and	(orientation: landscape)
		overflow-y auto


		//container with image and items
	&__scheme
		position relative
		//width 42em
		width 42em * 1.1
		margin 4% auto 0
		//padding-right 5.5%
		@media screen and (max-height: 740px)
				margin-top 1.5em
		@media screen and (min-width: 1051px) and (max-width: 1180px), (min-width: 701px) and (max-width: 830px)
			width 42em
			margin 8% auto 0
			padding-right 0
		@media screen and (min-width: 940px) and (max-width: 1050px), (max-width: 700px)//, (max-height: 650px)
			margin 8% auto 0
			width 42em * .8
		@media screen and (max-width: 480px)
			margin-top 0
			width 100%


	&__photo
		display block
		width 100%
		height auto
		@media screen and (max-width: 480px)
			display: none

	&__list
		position absolute
		top 0
		left 0
		bottom 0
		right 0
		margin 0
		padding 0
		list-style none
		@media screen and (max-width: 480px)
			position: static
			width 90%
			margin 0 auto

	&__item
		position absolute
		width 10.5em
		padding-top 2em
		font-weight bold
		line-height 1.1
		top 15em
		left -8em
		&:before
			content ''
			position absolute
			top 0
			left 0
			width 2em
			height 2em
			background url("../img/services/services__sprite.png") 0 0 no-repeat
		&:hover //styling effect progressive color filling
			.services__line:before
				width 0
				transition width .4s ease-in 0.6s
			.services__pointer:before
				width 0
				transition width .4s ease-in .2s
			.services__dot:before
				width 0
				transition width .2s ease-in
		@media screen and (max-width: 560px)
			&:before
				top .5em
				width 1.5em
				height 1.5em
				background-size cover
		@media screen and (max-width: 480px)
			position relative
			width 100%
			//-margin 0 auto
			padding 2.5em 0 1.3em 0
			text-align center
			border-bottom 1px solid lighten($base-text-color, 50%)
			&:last-child
				border-bottom none
			&:before
				top 0
				left 44%
				width 2em
				height 2em
				background-size cover

			//styling effect progressive color filling for 3, 4, 5 and 6 item
		&:nth-child(3)
		&:nth-child(4)
		&:nth-child(5)
		&:nth-child(6)
			.services__line
			.services__dot
				background-color #2b3334
				z-index: 100
				&:before
					width 0
					background-color: $base-decor-color
					z-index: 0
			&:hover
				.services__line:before
				.services__dot:before
					width 100%

			//ITEM(1)
		&:nth-child(1)
			top 13%
			left -3%
			.services__line
				width 5em
			.services__pointer
				right 1.5em
				width 4em
				transform rotateZ(45deg)
			.services__dot
				bottom -1.9em
				right 2.3em
			@media screen and (min-width: 1051px) and (max-width: 1180px), (min-width: 701px) and (max-width: 830px)
				top 13%
				left -4%
				.services__pointer
					right 2em
					width 3.5em
					transform rotateZ(45deg)
				.services__dot
					bottom -1.5em
					right 2.8em
			@media screen and (min-width: 940px) and (max-width: 1050px), (max-width: 700px)//, (max-height: 680px)
				top 10%
				left -4.5%
				.services__pointer
					right 3em
					width 2.5em
					transform rotateZ(55deg)
				.services__dot
					bottom -1em
					right 3.9em
			@media screen and (max-width: 480px)
				left 0
				&:before
					top 8%


			//ITEM(2)
		&:nth-child(2)
			top -4.5%
			left 14%
			&:before
				background-position 0 -2.6em;
			.services__line
				width 5em
			.services__pointer
				right .8em
				width 4.7em
				transform rotateZ(40deg)
			.services__dot
				bottom -2em
				right 1.7em
			@media screen and (min-width: 1051px) and (max-width: 1180px), (min-width: 701px) and (max-width: 830px)
				left 15%
				.services__pointer
					right 2.5em
					width 3em
					transform rotateZ(40deg)
				.services__dot
					bottom -1em
					right 2.9em
			@media screen and (min-width: 940px) and (max-width: 1050px), (max-width: 700px)//, (max-height: 680px)
				top -11%
				.services__pointer
					transform rotateZ(40deg)
					width 3em
					right 2.5em
				.services__dot
					bottom -.9em
					right 3em
			@media screen and (max-width: 560px)
				&:before
					background-position 0 -1.7em
			@media screen and (max-width: 480px)
				left 0
				width: 100%
				&:before
					top 6%
					background-position 0 -2.2em


			//ITEM(3)
		&:nth-child(3)
			top -3.5%
			left 50%
			width 8em
			&:before
				background-position 0 -5.3em;
			.services__line
				width 4em
			.services__pointer
				left 0
				bottom 1.15em
				width 5.3em
				transform rotateZ(-225deg)
			.services__dot
				bottom -2.6em
				left -3.9em
			@media screen and (min-width: 1051px) and (max-width: 1180px), (min-width: 701px) and (max-width: 830px)
				top -5%
				left 48%
				.services__pointer
					left 0
					bottom 1.15em
					width 3.7em
					transform rotateZ(-225deg)
				.services__dot
					bottom -1.4em
					left -2.7em
			@media screen and (min-width: 940px) and (max-width: 1050px), (max-width: 700px)//, (max-height: 680px)
				top -10.5%
				.services__pointer
					width 3.5em
				.services__dot
					bottom -1.5em
					left -2.75em
			@media screen and (max-width: 560px)
				&:before
					background-position 0 -3.6em
			@media screen and (max-width: 480px)
				left 0
				width 100%
				&:before
					top 5%
					background-position 0 -4.7em


			//ITEM(4)
		&:nth-child(4)
			top 0
			left 80%
			width 8em
			&:before
				background-position 0 -7.9em;
			.services__line
				width 4.5em
			.services__pointer
				left 0
				bottom: 1.15em
				width 7em
				transform rotateZ(-230deg)
			.services__dot
				bottom -4.3em
				left -4.7em
			@media screen and (min-width: 1051px) and (max-width: 1180px), (min-width: 701px) and (max-width: 830px)
				top 7.5%
				left 78%
				.services__pointer
					left 0
					bottom: 1.15em
					width 4.0em
					transform rotateZ(-225deg)
				.services__dot
					bottom -1.6em
					left -2.9em
			@media screen and (min-width: 940px) and (max-width: 1050px), (max-width: 700px)//, (max-height: 680px)
				top -5%
				.services__pointer
					width 5.1em
				.services__dot
					bottom -2.9em
					left -3.5em
			@media screen and (max-width: 560px)
				&:before
					background-position 0 -5.5em
			@media screen and (max-width: 480px)
				left 0
				width 100%
				&:before
					top 4%
					background-position 0 -7.2em


			//ITEM(5)
		&:nth-child(5)
			top 80%
			left 80%
			width 8em
			&:before
				width 2.1em
				height 2.2em
				background-position 0 -10.6em;
			.services__line
				width 5.5em
			.services__pointer
				left 0
				bottom: 1.15em
				width 6em
				transform rotateZ(223deg)
			.services__dot
				top 0
				left -4.7em
			@media screen and (min-width: 1051px) and (max-width: 1180px), (min-width: 701px) and (max-width: 830px)
				top 80%
				left 77%
				.services__pointer
					left 0
					bottom: 1.15em
					width 4.3em
					transform rotateZ(223deg)
				.services__dot
					top 1.4em
					left -3.2em
			@media screen and (min-width: 940px) and (max-width: 1050px), (max-width: 700px)//, (max-height: 680px)
				top 82%
				left 75%
				.services__pointer
					width 4em
					bottom: 1.1em
					transform rotateZ(240deg)
				.services__dot
					top .9em
					left -2.1em
			@media screen and (max-width: 560px)
				&:before
					width 1.6em
					height 1.6em
					background-position 0 -7.9em
			@media screen and (max-width: 480px)
				left 0
				width 100%
				&:before
					top 4%
					width 2em
					height 2em
					background-position 0 -9.7em


			//ITEM(6)
		&:nth-child(6)
			top 84%
			left 32%
			width 8em
			&:before
				width 2.1em
				background-position 0 -13.3em;
			.services__line
				width 4.55em
			.services__pointer
				left 0
				bottom: 1.15em
				width 5em
				transform rotateZ(235deg)
			.services__dot
				top -1em
				left -3.1em
			@media screen and (min-width: 1051px) and (max-width: 1180px), (min-width: 701px) and (max-width: 830px)
				top 83%
				left 32%
				.services__pointer
					bottom: 1.15em
					width 4.3em
					transform rotateZ(226deg)
				.services__dot
					top 0
					left -3.2em
			@media screen and (min-width: 940px) and (max-width: 1050px), (max-width: 700px)//, (max-height: 680px)
				top 85%
				.services__pointer
					bottom: 1.15em
					width 4.3em
					transform rotateZ(235deg)
				.services__dot
					top -.4em
					left -2.7em
			@media screen and (max-width: 560px)
				&:before
					width 1.6em
					background-position 0 -9.9em
			@media screen and (max-width: 480px)
				left 0
				width 100%
				&:before
					top 7%
					width 2em
					background-position 0 -12.5em


			//ITEM(7)
		&:nth-child(7)
			top 70%
			left -3%
			width 8em
			&:before
				background-position 0 -15.9em;
			.services__line
				width 5em
			.services__pointer
				right -4em
				bottom: 1.2em
				width 7em
				transform rotateZ(-41deg)
			.services__dot
				top -.4em
				right -2.6em
			@media screen and (min-width: 1051px) and (max-width: 1180px), (min-width: 701px) and (max-width: 830px)
				top 58%
				left -4%
				.services__pointer
					right -.45em
					bottom: 1.2em
					width 3.5em
					transform rotateZ(-45deg)
				.services__dot
					top 1.8em
					right .4em
			@media screen and (min-width: 940px) and (max-width: 1050px), (max-width: 700px)//, (max-height: 680px)
				left -4.5%
				.services__pointer
					right -3em
					bottom: 1.2em
					width 6em
					transform rotateZ(-65deg)
				.services__dot
					top -1em
					right .3em
			@media screen and (max-width: 560px)
				&:before
					background-position 0 -11em
			@media screen and (max-width: 480px)
				left 0
				width 100%
				&:before
					top 3%
					background-position 0 -14.5em


	&__price
		display block
		margin-top .5em
		font-weight normal

	&__line
		display block
		position absolute
		left 0
		bottom 1.2em
		z-index 10
		height 1px
		background-color $base-decor-color
		&:before
			display block
			content ''
			position absolute
			left 0
			top 0
			z-index 100
			width 100%
			height 100%
			background-color #2b3334
			transition width .4s ease-in
		@media screen and (max-width: 480px)
			display: none

	&__pointer
		display block
		position absolute
		bottom 1.2em
		z-index 10
		height 1px
		background-color $base-decor-color
		transform-origin 0 0 0
		&:before
			position absolute
			content ''
			top 0
			left 0
			z-index 100
			width 100%
			height 100%
			background-color #2b3334
			transition width .4s ease-in .4s
		@media screen and (max-width: 480px)
			display: none

	&__dot
		display block
		position absolute
		z-index 10
		width 6px
		height 6px
		background-color $base-decor-color
		border-radius 50%
		&:before
			position absolute
			content ''
			top 0
			left 0
			z-index 100
			width 100%
			height 100%
			background-color #2b3334
			border-radius 50%
			transition width .2s ease-in 0.8s
		@media screen and (max-width: 480px)
			display: none
