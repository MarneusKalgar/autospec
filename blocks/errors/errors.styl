.errors
	display: flex
	flex-direction: column
	align-items: center
	justify-content: center
	box-sizing: border-box
	width: 100vw
	min-width 12.5em
	height: 100vh
	min-height 16.25em
	padding: 1em

	&__title
		margin: 0
		font-size: 6rem
		color $base-decor-color
		@media screen and (max-width: 1200px)
			font-size: 4.5rem
		@media screen and (max-width: 600px), (max-height: 600px)
			font-size: 3rem;

	&__desc
		margin: 0
		font-size: $base-font-size * 1.25;
		text-align: center
		@media screen and (max-width: 1200px)
			font-size: $base-font-size * 1.125;
		@media screen and (max-width: 600px), (max-height: 600px)
			font-size: $base-font-size;

	&__btn
		position: relative
		height: 3.5em
		margin-top: 2em
		padding: 0 2em
		color $base-text-color-light
		font-weight: bold
		cursor: pointer
		&::before
			transform: none
		&:hover
			&::before
				background: darken($base-decor-color, 10%)
				transform: none
