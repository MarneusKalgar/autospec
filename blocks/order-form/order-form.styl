/*******************ORDER-FORM******************/
.order-form
	flex 1
	height 40em
	margin 0
	padding 1em 0 0 2em
	border-left 1px solid #d1d1d1

	&__caption
		font-size 1.5em
		font-weight bold
		color $base-decor-color

	&__set
		position relative
		margin .3em 0 0
		padding 0 0 0 2em
		height 2.625em
		border none
		border-bottom 1px solid #707070
		outline none

		&--container
			height 18.75em
			padding 0
			border none

	&__input
		display block
		width 100%
		height 100%
		border none
		background rgba(0,0,0,0)
		outline none

		&--file
			width .1px;
			height .1px;
			opacity 0
			overflow hidden
			position absolute
			z-index -1


		&--submit
			width 18em
			height 3.5em
			margin-top 5em
			letter-spacing .1em
			background $base-decor-color

	&__select
		display block
		width 100%
		height 100%
		border none
		color #a5a5a5
		background rgba(0,0,0,0)
		outline none
		-webkit-appearance none

	&__option
		padding 0

	&__label
		display block
		position absolute
		top 0
		left .7em
		width .8em
		height 100%

		&--desc
			position static
			width 90%
			height 4em
			margin-top 2em

		&--file
			position relative
			left 0
			width 18em
			height 3.5em
			margin-top 2.5em
			color $base-decor-color
			letter-spacing .1em
			cursor pointer
			&:hover
			&:focus
				.order-form__icon--file
					fill $base-text-color
					stroke $base-text-color

	&__icon
		display block
		position absolute
		width 100%
		height 100%
		fill $base-decor-color

		&--file
			top 1.4em
			left 4.8em
			width .8em
			height .8em
			fill $base-decor-color
			stroke $base-decor-color
			stroke-width 35px
			transition all .5s ease