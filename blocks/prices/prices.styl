/*******************PRICES******************/
.prices
	text-align: center

	&__wrap
		width $base-wrap-element-width
		margin 0 auto
		@media screen and (max-width: 1199px)
			box-sizing border-box
			width 100%
			padding 0 1.25em

	&__desc
		width: 80%
		min-width 30em
		margin: 0 auto
		font-size: 1.2em

	&__cars
		flex-container(row, wrap, center, center)
		margin: 2em 0 0
		padding: 0
		list-style none

	&__car
		margin: 1em
		
	&__cars-btn
		min-height 3em
		line-height: 3em
		margin: 1em
		padding: 0 1.5em
		&:before
			transform: none
		&:hover
		&:focus
			&:before
				background: darken($base-decor-color, 10%)
				transform: none
		
	&__modals
		margin: 1em 0 0

	&__modal
		display: none
		padding: 1.25em
		//border: 1px solid #000;

	&__caption
		font-size: 1.5em
		margin: 1em auto 0

	&__text
		width: 70%
		min-width: 17em
		margin: 1.5em auto 0

	&__img
		display: block
		width: 31.25em
		height: auto
		margin: 0 auto

	&__modal-btn
		margin: 2em auto 0
		min-height 3em
		line-height: 3em
		padding: 0 1.5em
		&:before
			transform: none
		&:hover
		&:focus
			&:before
				background: darken($base-decor-color, 10%)
				transform: none

	&__modal-price
		position: fixed
		z-index: 3000
		top: 0
		left: 0
		box-sizing: border-box
		width: 100%
		height: 100%
		padding: 2em
		transform translateX(-120%)
		transition all .4s ease-in
		&::before
			content: ""
			position: absolute
			width: 110%
			height: 110%
			left: -2.5em
			top: -2.5em
			//background rgba($base-overlay-element-color, .9)
			background: url("../img/prices/price-modal-bg.jpg") center no-repeat;
			background-size: cover
			filter blur(10px)

		&--isActive
			transform translateX(0)

	&__table-wrap
		position: relative
		top: 0
		left: 0
		z-index: 3500
		margin-top: 6em;
		height: 30em
		overflow-x: hidden
		overflow-y: auto

	&__table
		position: relative
		z-index: 4000
		margin: 2em auto 0

	&__cell
		width: 7%
		padding: 0 .5em
		&:first-child
			text-align: left;

	&__close
		position: absolute
		z-index: 4000
		top: 3em
		right: 4em
		width: 2em
		height: 2em
		padding 0
		outline none
		background rgba(0,0,0,0)
		border none
		&:hover
		&:focus
			.prices__icon
				fill $base-decor-color

	&__icon
		width 100%
		height 100%
		fill $base-text-color
		transition all .3s ease