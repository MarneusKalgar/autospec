/*******************PRICES******************/
.prices
	text-align: center

	&__wrap
		width $base-wrap-element-width
		margin 0 auto
		@media screen and (max-width: 1199px)
			box-sizing border-box
			width 100%
			padding 0 1.25em

	&__desc
		width: 80%
		min-width 30em
		margin: 0 auto
		font-size: 1.25em
		@media screen and (max-width: 700px)
			width: 100%
			min-width 100%

		//cars buttons
	&__cars
		flex-container(row, wrap, center, center)
		margin: 2em auto 0
		padding: 0
		list-style none
		@media screen and (max-width: 900px)
			justify-content: space-between
			width: 30em
		@media screen and (max-width: 600px)
			width: 100%
			flex-direction: column
			justify-content: center

	&__car
		margin: 1em
		
	&__cars-btn
		min-height 3em
		line-height: 3em
		margin: 1em
		padding: 0 1.5em
		border: none
		&:before
			transform: none
		&:hover
		&:focus
			&:before
				background: darken($base-decor-color, 10%)
				transform: none
		@media screen and (max-width: 600px)
			padding: .5em 1.5em

		//car modals container
	&__modals
		margin: 1em 0 0

	&__modal
		display: none
		padding: 1.25em
		@media screen and (max-width: 700px)
			padding: 1.25em 0

	&__caption
		font-size: 1.7em
		margin: 1em auto 0

	&__text
		width: 70%
		min-width: 17em
		margin: 1.5em auto 0
		@media screen and (max-width: 700px)
			width: 100%
			min-width: 100%

	&__img
		display: block
		width: 31.25em
		height: auto
		margin: 0 auto
		@media screen and (max-width: 550px)
			width: 100%
			max-width 100%

	&__modal-btn
		margin: 2em auto 0
		min-height 3em
		line-height: 3em
		padding: 0 1.5em
		border: none
		&:before
			transform: none
		&:hover
			&:before
				background: darken($base-decor-color, 10%)
				transform: none