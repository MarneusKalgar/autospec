/***********************HERO***********************/
.hero
	position relative
	box-sizing border-box
	height 43.75em
	padding-top 6.5625em
	color $base-text-color-light
	text-align center
	background $base-decor-color-dark url("../img/hero/hero-bg-lg.jpg") center no-repeat

	&__title
		position relative
		width 6em
		margin 4.5em auto 0
		@media screen and (max-width: 450px)
			margin-top 5.5em
		&::before
			content ''
			position absolute
			top -1.7em
			left 36%
			width 1.5625em
			height 1.5em
			background url("../img/hero/hero__title-icon.png") 0 0 no-repeat
			background-size cover
			@media screen and (max-width: 450px)
				width @width * .8
				height @height * .8
				top -1.3em
				left 40%

	&__lead
		width 23.95em
		margin .5em auto 0
		font-size 1.5em
		@media screen and (max-width: 840px)
			margin-top 1em
			font-size 1.2em
		@media screen and (max-width: 599px)
			box-sizing border-box
			width 100%
			padding 0 3%

	&__link
		display block
		width 1.2em
		height 1em
		margin 3.5em auto 0
		transform-origin 50% 50% 0
		@media screen and (max-width: 450px)
			position absolute
			bottom 2em
			left 50%
			margin 0
			transform translateX(-50%)

	&__icon
		width 100%
		height 100%
		fill $base-text-color-light
		stroke $base-text-color-light
		stroke-width 1em
		transition all .3s ease
		&:hover
		&:active
		&:focus
			fill $base-decor-color
			stroke $base-decor-color

	&__circle
		position absolute
		top 0
		height 100%
		width 12.8em
		@media screen and (max-width: 599px)
			display none
		&::before
			content: ''
			position absolute
			top 33.5%
			width 14.3em
			height 14.3em
			background url("../img/sidebar/sidebar-circle-inner.png") center no-repeat
			background-size cover
			transform-origin 50% 50% 0
			animation rotateCircle 20s linear infinite reverse running
			+retina()
				background-image url("../img/sidebar/sidebar-circle-inner-lg.png")
			@media screen and (max-width: 1199px)
				top 37%
				width @width * .7
				height @height * .7
			@media screen and (max-width: 629px)
				display none
				background none
		&::after
			content: ''
			position absolute
			top 21%
			width 25.6em
			height 25.6em
			background url("../img/sidebar/sidebar-circle-outer.png") center no-repeat
			background-size cover
			transform-origin 50% 50% 0
			animation rotateCircle 30s linear infinite running
			+retina()
				background-image url("../img/sidebar/sidebar-circle-outer-lg.png")
			@media screen and (max-width: 1199px)
				top 27.8%
				width @width * .7
				height @height * .7
			@media screen and (max-width: 629px)
				display none
				background none

		&--left
			left 0
			&::before
				left -57%
				@media screen and (max-width: 1199px)
					left -40%
			&::after
				left -100%
				@media screen and (max-width: 1199px)
					left -70%

		&--right
			right 0
			&::before
				right -57%
				@media screen and (max-width: 1199px)
					right -40%
			&::after
				right -100%
				@media screen and (max-width: 1199px)
					right -70%

@keyframes rotateCircle
	0%
		transform rotateZ(0deg)
	100%
		transform rotateZ(360deg)