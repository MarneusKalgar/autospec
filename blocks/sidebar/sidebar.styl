/***********************SIDEBAR***********************/
.sidebar
	position relative
	z-index 4000
	width $sidebar-width
	min-height: 20rem
	background $sidebar-bg-color url("../img/sidebar/sidebar-bg.jpg") repeat 0 0
	overflow hidden
	text-align: center
	transform-origin right
	will-change transform
	&:before
		content ''
		position absolute
		left 12%
		width 8.25rem
		height 8.25rem
		background url("../img/sidebar/sidebar-circle-inner.png") 0 0 no-repeat
		background-size cover
		transform-origin 50% 50% 0
		will-change transform
		animation rotateCircle 10s linear infinite
		@media screen and (max-width: $media-md)
			left 11%
			width 6.6rem
			height 6.6rem
		@media screen and (max-height: 490px) and (orientation: landscape), (max-width: 400px)
			display none
	&:after
		content ''
		position absolute
		top 0
		left -19.5%
		width 15rem
		height 15rem
		background url("../img/sidebar/sidebar-circle-outer.png") 0 0 no-repeat
		background-size cover
		transform-origin 50% 50% 0
		will-change transform
		animation rotateCircle 10s linear infinite reverse
		@media screen and (max-width: $media-md)
			left -20.5%
			width 12rem
			height 12rem
		@media screen and (max-height: 490px) and (orientation: landscape), (max-width: 400px)
			display none
	@media screen and (max-width: 940px)
		position absolute
		top 0
		right 0
		height 100%
		transform translateX(100%)
		transition transform .3s
		&:before
		&:after
			animation-play-state paused
	@media screen and (max-width: $media-md)
		width $sidebar-width * .8 //276px
	@media screen and (max-height: 400px) and (orientation: landscape)
		width $sidebar-width-landscape


	&--isMove
		transform translateX(0)
		transition transform .3s
		&:before
		&:after
			animation-play-state running

	&--isAnimated
		animation slideBar 2.5s ease forwards
		@media screen and (max-width: 940px)
			animation: none

	&--isComponent
		position absolute
		top 0
		right 0
		height 100%
		transform translateX(100%)
		transition transform .3s
		&:before
		&:after
			animation-play-state paused

	&__link
		position: relative
		display: inline-block
		margin: 1em auto 0;
		text-decoration: none
		text-align: center
		font-size: $base-font-size * .875;
		color $base-text-color-light
		text-transform: uppercase
		transition: all .4s ease
		&:hover
		&:focus
			color $base-decor-color
		@media screen and (max-height: 700px)
			margin-top: .5em;
		@media screen and (max-height: 480px)
			margin-top: 0


	&__btn
		margin 13% auto 0
		@media screen and (max-height: 750px)
			margin 7% auto 0
		@media screen and (max-height: 600px)
			margin 3% auto 0
		@media screen and (max-height: 490px)
			margin-top: .8em;


		&--write
			display: block
			@media screen and (max-width: 768px)
				display: none

		&--call
			display: none
			@media screen and (max-width: 768px)
				display: block

	&__socials
		margin 1.2em auto 1.2em
		@media screen and (max-height: 700px)
			margin .8em auto .8em
		@media screen and (max-height: 480px)
			margin .6em auto .5em


@keyframes rotateCircle
	0%
		transform translate(50%,-50%) rotateZ(0deg)
	100%
		transform translate(50%,-50%) rotateZ(360deg)

@keyframes slideBar
	0%,
	33%
		transform scaleX(0)
	65%,
	100%
		transform scaleX(1)

