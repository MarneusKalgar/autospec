mixin why(items)
	+b.SECTION.why(class="wow slideInRight")
		+e.DIV.wrap
			+e.H2.title(class="titles --landing") Почему мы
			+e.DIV.slider
				+e.DIV.slider-wrap
					+e.UL.list
						each item in items
							+e.slide(class=item.class)
								+e.DIV.icon
									+e.SVG.img(xmlns="http://www.w3.org/2000/svg", viewBox="0 0 50.7 50.7", width="50", height="32")
										path(d=item.path1)
										path(d=item.path2)
								+e.H4.subtitle= item.subtitle
								+e.P.desc=item.text
				+e.SPAN.control(class="--prev")
					+e.SVG.sign(xmlns="http://www.w3.org/2000/svg", viewBox="0 0 477.175 477.175", width="25", height="50")
