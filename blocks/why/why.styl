/*******************WHY******************/
.why
	padding 3.2em 0 1.2em
	color #000

	&__wrap
		width $base-wrap-element-width
		margin 0 auto

	&__title
		margin 0

	&__slider
		position relative
		height 27em
		margin-top 2.3em
		padding 0 6em
		overflow hidden

	&__slider-wrap
		position relative
		left 0
		width 110em
		height 22.875em
		//overflow hidden

	&__list
		position relative
		height 100%
		margin 0
		padding 0
		list-style none

	&__slide
		float left
		box-sizing: border-box
		width 17.5em
		margin-right 4.5em

	&__icon
		position relative
		width 6.25em
		height 6.25em
		margin 0 auto
		border-radius 50%
		border 1px solid #e8e8e8

	&__img
		position absolute
		top 50%
		left 50%
		transform translate(-50%,-50%)
		fill $base-decor-color

	&__subtitle
		margin 1em 0 .5em
		font-size 1.5em
		text-align center

	&__desc
		margin 0

	&__control
		display block
		position absolute
		top 32%
		width 2em
		height 4em
		cursor pointer

		&--prev
			left -.5em

		&--next
			right -.5em

	&__sign
		//transform scale(1.5)
		width 100%
		height 100%
		fill #bdbdbd
		transition all .3s ease
		&:hover
			fill $base-decor-color