/*******************WHY******************/
.why
	padding 3.2em 0 1.2em
	color #000
	animation-duration 2s
	animation-delay 0s

	&__wrap
		width $base-wrap-element-width
		margin 0 auto
		@media screen and (max-width: 1199px)
			box-sizing border-box
			width 100%
			padding 0 1.25em

	&__title
		margin 0
		@media screen and (max-width: 1199px)
			text-align center

	&__slider
		position relative
		min-height 27em
		margin-top 2.3em
		padding 0 6em
		overflow hidden
		@media screen and (max-width: 1199px)
			width 37em
			margin 2.3em auto 0
			padding-left 5em
		@media screen and (max-width: 829px)
			width 16em
		@media screen and (max-width: 499px)
			width 14em
			min-height 31em
			padding 0 2em 0 2em

	&__slider-wrap
		position relative
		left 0
		width 110em
		height 100%
		&::after
			content ""
			display table
			clear both

	&__list
		position relative
		height 100%
		margin 0
		padding 0
		list-style none
		&::after
			content ""
			display table
			clear both

	&__slide
		float left
		box-sizing: border-box
		width 17.5em
		margin-right 4.5em
		@media screen and (max-width: 499px)
			width 14em
			overflow-y auto

	&__icon
		position relative
		width 6.25em
		height 6.25em
		margin 0 auto
		border-radius 50%
		border 1px solid #e8e8e8

	&__img
		position absolute
		top 50%
		left 50%
		transform translate(-50%,-50%)
		fill $base-decor-color

	&__subtitle
		margin 1em 0 .5em
		font-size 1.5em
		text-align center

	&__desc
		margin 0

	&__control
		display block
		position absolute
		top 32%
		width 2em
		height 4em
		cursor pointer

		&--prev
			left -.5em

		&--next
			right -.5em

	&__sign
		//transform scale(1.5)
		width 100%
		height 100%
		fill #bdbdbd
		transition all .3s ease
		&:hover
			fill $base-decor-color