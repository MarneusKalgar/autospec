/*******************aboutRange******************/
.aboutRange
	margin-top: 3em;
	padding: 2em 0

	&__wrap
		width $base-wrap-element-width
		margin 0 auto
		@media screen and (max-width: 1199px)
			box-sizing border-box
			width 100%
			padding 0 1.25em

	&__title
		margin: 0
		text-align: center

	&__lead
		width: 90%
		margin: 1em auto 0
		text-align: center
		font-size: 1.5em
		@media screen and (max-width: 750px)
			width: 100%
		@media screen and (max-width: 480px)
			font-size: 1.25em

	&__video
		width: 100%
		min-width 15em
		height: 30em
		margin-top 2.5em
		background: rgba($base-text-color, .8);
		pointer-events auto
