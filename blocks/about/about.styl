/*******************ABOUT******************/
.about
	position relative
	flex 1
	box-sizing border-box
	height 100%
	padding 9.5em 7.5% 3%
	font-size 1rem
	background: #fff url("../img/about/about-bg.jpg") 0 0 no-repeat
	background-size cover
	overflow-x hidden
	overflow-y auto
	@media screen and (max-width: 630px)
		padding-top 7em
	@media screen and (max-width: 450px)
		padding-top 6em

	&__title
		margin 0
		position relative
