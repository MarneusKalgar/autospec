/*******************ABOUT******************/
.about
	position relative
	flex 1
	box-sizing border-box
	height 100%
	padding 9.5em 5% 1em 7.5%
	font-size 1rem
	background: #fff url("../img/about/about-bg.jpg") 0 0 no-repeat
	background-size: cover
	overflow-x hidden
	@media screen and (max-height: 600px)
		overflow-y auto
	@media screen and (max-width: 630px)
		padding-top 7em
	@media screen and (max-width: 450px)
		padding-top 6em

	&--isOverlay
		&::before
			content ""
			position absolute
			top 0
			left 0
			z-index 2500
			width 100%
			height 100%
			background rgba(#000, .4)

	&__title
		margin 0
		position relative
		z-index: 20
