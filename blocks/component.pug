include _assets/bemto/bemto
- set_bemto_settings({ modifier: "--" })

include head/head
include logo/logo
include menu-btn/menu-btn
include component/component


doctype html
html(lang="ru")

	head
		+head({
			"title": "autospecservice painting",
			"author": "Interact Agency",
			"description": "autospecservice painting"
		})
		// build:css css/vendor-singleService.css
		link(rel="stylesheet", href="js/libs/animsition/dist/css/animsition.min.css")
		link(rel="stylesheet", href="js/libs/animate.css/dist/css/animate.min.css")
		link(rel="stylesheet", href="js/libs/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.custom.css")
		// endbuild
		// build:css css/singleService.css
		link(rel="stylesheet", href="css/singleService.css")
		// endbuild

	+b.BODY.page
		+e.DIV.wrap(class="--singleService animsition")
			+b.HEADER.header#header(class="--singleService")
				+e.DIV.wrap(class="--fixed")
					// block logo
					+logo({
						"id": "logo",
						"class": "logo --singleService",
						"href": "index.html",
						"set": "img/logo/autospec-logo-light@2.png",
						"src": "img/logo/autospec-logo-light.png",
						"alt": "логотип компании автоспецсервис"
					})
					// end block logo

					+e.UL.list(class="--isComponent")
						+e.LI.list-item(class="--isComponent")
							+b.A.btn(href="services.html", class="--bordered --arrow") В Сервис и цены
								+e.SVG.icon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32.635 32.635" width="14" height="8")
									path(d="M32.13 16.82H.5c-.28 0-.5-.23-.5-.5s.22-.5.5-.5h31.64c.27 0 .5.22.5.5s-.23.5-.5.5z")
									path(d="M13.04 29.35c-.13 0-.26-.05-.36-.14L.15 16.68c-.1-.1-.15-.22-.15-.36s.05-.24.15-.34L12.68 3.43c.2-.2.52-.2.7 0s.2.5 0 .7L1.22 16.34l12.2 12.17c.2.2.2.5 0 .7-.1.1-.24.15-.36.15z")
						+e.LI.list-item(class="--telephone --isComponent")
							+e.link(href="tel:+380975555555")
								| +38 (097) 555 - 55 - 55

					+menu-btn({"class": "--fixed"})

			+component()

		// build:js js/vendor.js
		script( src="js/libs/jquery/dist/jquery.min.js")
		script( src="js/libs/animsition/dist/js/animsition.min.js")
		script( src="js/libs/jquery.maskedinput/dist/jquery.maskedinput.min.js")
		script( src="js/libs/jquery-validation/dist/jquery.validate.min.js")
		script( src="js/libs/wow/dist/wow.min.js")
		script( src="js/libs/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.concat.min.js")
		// endbuild

		// build:js js/main.js
		script( src="js/main.js")
		// endbuild

		script.
			$('.animsition').animsition({
				inClass: 'fade-in',
				outClass: 'fade-out',
				inDuration: 500,
				outDuration: 500,
				linkElement: '.animsition-link',
				// e.g. linkElement: 'a:not([target="_blank"]):not([href^="#"])'
				loading: true,
				loadingParentElement: 'body', //animsition wrapper element
				loadingClass: 'animsition-loading',
				loadingInner: '', // e.g '<img src="loading.svg" />'
				timeout: false,
				timeoutCountdown: 1000,
				onLoadEvent: true,
				browser: ['animation-duration', '-webkit-animation-duration'],
				// "browser" option allows you to disable the "animsition" in case the css property in the array is not supported by your browser.
				// The default setting is to disable the "animsition" in a browser that does not support "animation-duration".
				overlay: false,
				overlayClass: 'animsition-overlay-slide',
				overlayParentElement: 'body',
				transition: function (url) {
					window.location.href = url;
				}
			});