/*******************TAB-PANEL******************/
.tab-panel
	width 100%
	margin-top 2.5em
	border-radius .5em
	@media screen and (min-width: 940px) and (max-width: 1230px), (max-width: 820px)
		margin-top 5em
	@media screen and (max-width: 600px)
		margin-top 4em
	@media screen and (max-width: 450px)
		margin-top: 1em

	&__menu
		position absolute
		top 10em
		right 3em
		z-index 500
		flex-container(row, nowrap, center, center)
		margin 0 -.3em
		padding 0
		list-style none
		font-size 1.1em
		@media screen and (min-width: 940px) and (max-width: 1230px)
			top 13.5em
			left 11%
			justify-content: flex-start
		@media screen and (max-width: 820px)
			top 13.5em
			left 7.5%
			justify-content: flex-start
		@media screen and (max-width: 630px)
			top 10.5em
		@media screen and (max-width: 450px)
			flex-direction: column
			align-items: flex-start
			position: relative
			top 0
			left: 0
			width 8em

		&--isOverlay
			z-index: 100;


	&__tab
		box-sizing border-box
		max-width 6.25em
		margin 0 .3em
		text-transform uppercase
		cursor pointer
		transition all .4s ease-in
		border-bottom 2px solid rgba(0,0,0,0)
		&:hover
			color $base-decor-color
		@media screen and (max-width: 450px)
			margin .3em 0 0
			text-align: left
			&:first-child
				margin: 0

		&--active
			color $base-decor-color
			border-bottom 2px solid $base-decor-color


	&__item
		display none
		padding 1.5em 5% 1.5em
		background rgba(#f1f1f1, .7)
		border-radius .4em
		opacity 0
		@media screen and (min-width: 940px) and (max-width: 1230px), (max-width: 820px)
			padding: 0
			background: none
		@media screen and (min-height: 730px)
			max-height 25em
		@media screen and (max-width: 450px)
			margin-top: 2em;
		@media screen and (min-width: 768px)
			min-height 13.5em
			max-height 20em
			overflow-y: auto
			overflow-x: hidden

		&--active
			display block

		&--animate
			opacity 1
			transition opacity .7s ease

		&--history
			position relative
			padding 0 0 1em
			background rgba(0,0,0,0)
			border-radius 0
			//border: 1px solid #000
			@media screen and (min-width: 768px)
				max-height: 25em;

		&--tour
			max-height none
			padding 0 0 1em
			background rgba(0,0,0,0)
			border-radius 0

	&__frame
		display: block
		width: 100%
		min-width 15em
		height: 20em
		margin-top 2.5em


	&__subtitle
		line-height 1.2
		font-size 1.5em
		margin 0

		&--history
			position relative
			z-index 10
			width: 100%
			margin .5em 0 0 2em
			padding 0
			&:before
				content ''
				position absolute
				top 0
				left -2em
				z-index -1
				width 3.2em
				height 3.2em
				background url("../img/tab-panel/quote.png") 0 0 no-repeat
				background-size cover
				@media screen and (max-width: 750px)
					left -1em
				@media screen and (max-width: 450px)
					left -.5em
			@media screen and (min-width: 940px) and (max-width: 1120px)
				padding-right 25%
			@media screen and (max-width: 700px) and (orientation: portrait)
				padding-right 0
			@media screen and (max-width: 450px)
				max-width 14em
				margin 0
				font-size: 1.3em;

	&__row
		display: flex
		align-items: flex-start
		@media screen and (max-width: 768px)
			display: block

	&__col
		order: 1
		width: 71%
		margin-top: 1em;
		@media screen and (max-width: 768px)
			width: 100%

		&--photo
			order: 2
			width: 29%
			margin: 1em 0 0
			padding: 0
			transform: scale(0.8)
			@media screen and (max-width: 768px)
				float: right
				min-width: 10em
			@media screen and (max-width: 450px)
				display: none

	&__text
		margin 1em 0 0
		&:last-child
			margin-top 1.5em

	&__strong
		font-weight: bold
			
	&__link
		color $base-decor-color

	&__person
		margin 0
		width: 100%

	&__img
		display: block
		width 100%
		height auto

	&__desc
		margin: .5em 0 0;
		text-align: center
		&:first-child
			font-weight bold
		&:last-child
			font-style italic