/*******************TAB-PANEL******************/
.tab-panel
	margin-top 2.1em
	border-radius .5em
	//overflow hidden
	@media screen and (min-width: 940px) and (max-width: 1120px), (max-width: 750px)
		margin-top 5em
	@media screen and (max-width: 600px)
		margin-top 4em

	&__menu
		position absolute
		top 10em
		right 3em
		z-index 100
		flex-container(row, nowrap, space-between, center)
		width 18em
		margin 0
		padding 0
		list-style none
		font-size 1.1em
		@media screen and (min-width: 940px) and (max-width: 1120px), (max-width: 750px)
			top 13.5em
			left 11%
		@media screen and (max-width: 750px)
			top 13.5em
			left 7.5%
		@media screen and (max-width: 630px)
			top 10.5em
		@media screen and (max-width: 450px)
			top 10em
			width 14em
			font-size 1em


	&__tab
		box-sizing border-box
		text-transform uppercase
		cursor pointer
		transition all .4s ease-in .1s
		border-bottom 2px solid rgba(0,0,0,0)

		&--active
			color $base-decor-color
			border-bottom 2px solid $base-decor-color


	&__item
		display none
		padding 4% 12% 7.5% 7%
		background rgba(#f1f1f1, .7)
		border-radius .4em
		opacity 0
		//transition opacity .5s ease .3s
		@media screen and (min-width: 940px) and (max-width: 1120px), (max-width: 750px)
			padding: 0
			background: none

		&--active
			display block

		&--animate
			opacity 1
			transition opacity .7s ease

		&--history
			position relative
			padding 0
			background rgba(0,0,0,0)
			border-radius none
			@media screen and (max-width: 800px)
				padding-bottom: 13em
			.tab-panel__subtitle
				position relative
				z-index 10
				margin-top -.3em
				padding 0
				&:before
					content ''
					position absolute
					top 0
					left -2em
					z-index -1
					width 3.2em
					height 3.2em
					background url("../img/tab-panel/quote.png") 0 0 no-repeat
					background-size cover
					@media screen and (max-width: 750px)
						left -1em
					@media screen and (max-width: 450px)
						left -.5em
			.tab-panel__text
				margin-top 1.5em
				padding 0 20% 0 0
				@media screen and (min-width: 940px) and (max-width: 1120px)
					padding-right 25%
				@media screen and (max-width: 700px) and (orientation: portrait)
					padding-right 0
			//-@media screen and (min-height: 650px), (max-width: 940px)
			//-	padding-right 30%

	&__subtitle
		line-height 1.2
		font-size 1.5em
		margin 0
		@media screen and (max-width: 450px)
			font-size 1.2em

	&__text
		margin 1em 0 0
		&:last-child
			margin-top 1.5em

	&__person
		margin 0
		position fixed
		right 30%
		bottom -.5em
		width 16rem
		height 23rem
		@media screen and (max-width: 1200px)
			right 36%
			//bottom 4em
			width 16rem * .7
			height 23rem * .7
		@media screen and (max-width: 1040px) and (min-width: 941px)
			position absolute
			right -10%
			bottom 20%
		@media screen and (max-width: 940px)
			right 5%
			bottom 0
		@media screen and (max-width: 780px)
			position absolute
			bottom -10%
			right 0
		@media screen and (max-width: 780px) and (orientation: portrait)
			bottom 5%
		@media screen and (max-width: 700px) and (orientation: portrait)
			bottom -8%
		@media screen and (min-width: 799px) and (min-height: 1280px)
			position absolute
			bottom: -10%
			right -7%


	&__img
		width 100%
		height 100%

	&__caption
		position absolute
		left -9.5em
		bottom 2.7em
		@media screen and (max-width: 1040px) and (min-width: 941px)
			bottom -3em
			left 2.5em
		@media screen and (max-width: 700px) and (orientation: portrait)
			bottom: 0
			left: -45%
		@media screen and (min-width: 799px) and (min-height: 1200px)
			bottom -3em
			left 2.5em

	&__desc
		margin 0
		&:first-child
			font-weight bold
		&:last-child
			font-style italic
