/*******************TAB-PANEL******************/
.tab-panel
	width 100%
	margin-top 2.1em
	border-radius .5em
	@media screen and (min-width: 940px) and (max-width: 1120px), (max-width: 750px)
		margin-top 5em
	@media screen and (max-width: 600px)
		margin-top 4em

	&__menu
		position absolute
		top 10em
		right 3em
		z-index 500
		flex-container(row, nowrap, space-between, center)
		width 18em
		margin 0
		padding 0
		list-style none
		font-size 1.1em
		@media screen and (min-width: 940px) and (max-width: 1120px), (max-width: 750px)
			top 13.5em
			left 11%
		@media screen and (max-width: 750px)
			top 13.5em
			left 7.5%
		@media screen and (max-width: 630px)
			top 10.5em
		@media screen and (max-width: 450px)
			top 10em
			width 14em
			font-size 1em

		&--isOverlay
			z-index: 100;


	&__tab
		box-sizing border-box
		text-transform uppercase
		cursor pointer
		transition all .4s ease-in .1s
		border-bottom 2px solid rgba(0,0,0,0)
		@media screen and (max-width: 450px)
			margin-right: 1em;
			&:last-child
				margin-right: 0

		&--active
			color $base-decor-color
			border-bottom 2px solid $base-decor-color


	&__item
		display none
		padding 1.5em 5% 1.5em
		min-height 13.5em
		max-height 20em
		background rgba(#f1f1f1, .7)
		border-radius .4em
		opacity 0
		overflow-y: auto
		@media screen and (min-width: 940px) and (max-width: 1120px), (max-width: 750px)
			padding: 0
			background: none
		@media screen and (min-height: 730px)
			max-height 25em

		&--active
			display block

		&--animate
			opacity 1
			transition opacity .7s ease

		&--history
			position relative
			max-height: 25em;
			padding 0 0 1em
			background rgba(0,0,0,0)
			border-radius 0
			//border: 1px solid #000
			@media screen and (max-width: 800px)
				padding-bottom: 0


	&__subtitle
		line-height 1.2
		font-size 1.5em
		margin 0
		@media screen and (max-width: 450px)
			font-size 1.2em

		&--history
			position relative
			z-index 10
			width: 100%
			margin .5em 0 0 2em
			padding 0
			&:before
				content ''
				position absolute
				top 0
				left -2em
				z-index -1
				width 3.2em
				height 3.2em
				background url("../img/tab-panel/quote.png") 0 0 no-repeat
				background-size cover
				@media screen and (max-width: 750px)
					left -1em
				@media screen and (max-width: 450px)
					left -.5em
			@media screen and (min-width: 940px) and (max-width: 1120px)
				padding-right 25%
			@media screen and (max-width: 700px) and (orientation: portrait)
				padding-right 0

	&__row
		display: flex
		align-items: flex-start

	&__col
		width: 71%
		margin-top: 1em;
		@media screen and (max-width: 750px)
			width: 100%

		&--photo
			width: 29%
			margin: 0
			padding: 0
			transform: scale(0.8)
			@media screen and (max-width: 750px)
				display: none

	&__text
		margin 1em 0 0
		&:last-child
			margin-top 1.5em

	&__strong
		font-weight: bold
			
	&__link
		color $base-decor-color

	&__person
		margin 0
		width: 100%

	&__img
		display: block
		width 100%
		height auto

	&__desc
		margin: .5em 0 0;
		text-align: center
		&:first-child
			font-weight bold
		&:last-child
			font-style italic

