mixin callback-form-embeded
	+b.FORM.callback-form(method="POST", action="#", name="callback")
		+e.DIV.row
			+e.LABEL.label(for="callback-tel", class="svgicon --person")
			+e.INPUT.input(type="tel", id="callback-tel", name="callback-tel", required, aria-required="true", placeholder="Введите ваш телефон")
		+e.DIV.row
			+e.LABEL.label(for="callback-name", class="svgicon --phone")
			+e.INPUT.input(type="text", id="callback-name", name="callback-name", required, aria-required="true", placeholder="Как Вас зовут?")
		+e.DIV.row
			+e.LABEL.label(class="--wrap btn --bordered")
				+b.INPUT.btn(type="submit", class="callback-form__btn", value="перезвоните мне")