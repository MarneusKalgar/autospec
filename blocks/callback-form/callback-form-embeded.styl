/************CALLBACK-FORM**************/
.callback-form
	position: relative
	width 13em

	&__label
		display block
		position: absolute
		visibility hidden
		opacity 0

	&__input
		display block
		width 100%
		margin 1em 0 0 0
		padding .5em .5em .5em 2em
		border none
		background rgba(0,0,0,0)
		border-bottom 1px solid #707070
		outline none

	&__btn
		position relative
		left 0
		width 100%
		height 3.5em
		margin-top 3em
		padding 0 1em
		color $base-decor-color
		letter-spacing .1em
		cursor pointer