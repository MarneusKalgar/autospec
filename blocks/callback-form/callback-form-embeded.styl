/************CALLBACK-FORM**************/
.callback-form
	position: relative
	width 13em

	&__row
		position: relative
		width 100%

	&__label
		display block
		position absolute
		top .65em
		left .6em
		width .8em
		height .8em
		&::before
			width 100%
			height 100%

		&--wrap
			position relative
			top 0
			left 0
			width 100%
			height 3.5em
			margin-top 3em
			padding 0 .5em
			&:hover
			&:focus
				.callback-form__btn
					color $base-text-color-light


	&__input
		display block
		width 100%
		margin 1em 0 0 0
		padding .5em .5em .5em 2em
		border none
		background rgba(0,0,0,0)
		border-bottom 1px solid #707070
		outline none
		transition all .3s ease


	&__btn
		position relative
		left 0
		width 100%
		height 100%
		padding 0 1em
		color $base-decor-color
		letter-spacing .1em
		cursor pointer