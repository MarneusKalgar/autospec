/***********************BUNDLES***********************/
.bundles
	padding 3.75em 0 5.3em
	background $base-decor-color-light-grey

	&__wrap
		flex-container(row, wrap, center, flex-start)
		width $base-wrap-element-width
		margin 0 auto
		@media screen and (max-width: 1199px)
			flex-direction column
			box-sizing border-box
			width 100%
			padding 0 1.25em

	&__table-wrap
		width 100%
		@media screen and (max-width: 599px)
			overflow-x auto

	&__table
		width 100%
		min-width 28em
		margin-top 6em
		text-align left
		animation-duration 2s
		animation-delay 0s

	&__row
		width 100%

	&__head-cell
		position relative
		width 20%
		padding .5em
		border-bottom 1px solid #adadad

		&--title
			box-sizing border-box
			width: 40%
			min-width 16em
			padding-right 10%
			@media screen and (max-width: 899px)
				padding-right: 5%
			@media screen and (max-width: 599px)
				min-width 10em
				padding-right .5em

		&:not(:first-child)
			text-transform uppercase
			font-weight bold
			color $base-decor-color


	&__content-cell
		position relative
		width 20%
		padding .8em .5em
		vertical-align bottom
		border-bottom 1px solid #d1d1d1

		&--title
			box-sizing border-box
			width: 40%
			min-width 16em
			padding-right 10%
			font-weight bold
			@media screen and (max-width: 899px)
				padding-right: 5%
			@media screen and (max-width: 599px)
				min-width 10em
				padding-right .5em

		&--checked
			position relative
			&::before
				content ''
				position absolute
				top 50%
				left .5em
				width 1em
				height 1em
				transform translateY(-50%)
				background url("data:image/svg+xml;base64,") center no-repeat

.fixed-column
	position absolute
	display inline-block
	width auto
	border-right 1px solid #ddd
	@media screen and (min-width: 600px)
		display none
