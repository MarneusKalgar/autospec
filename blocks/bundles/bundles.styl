/***********************BUNDLES***********************/
.bundles
	padding 3.75em 0 4.5em
	background #ebebeb

	&__wrap
		flex-container(row, wrap, center, flex-start)
		width $base-wrap-element-width
		margin 0 auto

	&__table
		width 100%
		margin-top 6em
		text-align left

	&__row:nth-child(4)
	&__row:nth-child(5)
		.bundles__content-cell--checked::before
			top 1em

	&__head-cell
		width 25%
		padding .5em 0
		border-bottom 1px solid #adadad

		&:nth-child(1)
			width 17.8125em

		&:not(:first-child)
			text-transform uppercase
			font-weight bold
			color $base-decor-color

	&__content-cell
		width 25%
		padding .8em 0
		vertical-align bottom
		border-bottom 1px solid #d1d1d1

		&:nth-child(1)
			width 17.8125em
			font-weight bold

		&--checked
			position relative
			&::before
				content ''
				position absolute
				top 2.3em
				left 0
				width 1em
				height 1em
				background url("data:image/svg+xml;base64,") center no-repeat