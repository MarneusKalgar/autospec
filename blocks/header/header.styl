/*!******************HEADER******************/
.header
	position absolute
	top 0
	left 0
	z-index 1000
	width 100%
	box-sizing border-box
	@media screen and (max-width: 940px)
		flex-container(row, nowrap, space-between, center)
		padding 5% 5% 0

	&--singleService
		flex-container(row, wrap, space-between, flex-end)
		height 6.5625em
		padding 0 20%
		@media screen and (max-width: 1500px)
			padding 0 10%
		@media screen and (max-width: 1100px)
			padding 0 5%
