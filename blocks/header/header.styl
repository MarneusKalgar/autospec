/*!******************HEADER******************/
.header
	position absolute
	top 0
	left 0
	z-index 400
	width 100%
	box-sizing border-box
	@media screen and (max-width: 940px)
		flex-container(row, nowrap, space-between, center)
		padding 5% 5% 0
	@media screen and (max-width: 600px)
		padding 5% 6% 0

	&--singleService
		width 100%
		height 6.5625em
		padding 0
		@media screen and (max-width: 840px)
			height 10em
		@media screen and (max-width: 490px)
			height 13em

	&__wrap
		flex-container(row, wrap, space-between, flex-end)
		width $base-wrap-element-width
		height 100%
		margin 0 auto
		@media screen and (max-width: 1179px)
			width 94%
			margin: 0
			padding 0 3%
		@media screen and (max-width: 840px)
			width 30em
			margin 0 auto
			padding 0
			justify-content center
		@media screen and (max-width: 490px)
			width 100%

	&__btn
		@media screen and (max-width: 840px)
			margin 0 .5em
