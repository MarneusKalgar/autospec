/*!******************HEADER******************/
.header
	position absolute
	top 0
	left 0
	z-index 400
	width 100%
	box-sizing border-box
	@media screen and (max-width: 940px)
		flex-container(row, nowrap, space-between, center)
		padding 5% 5% 0
	@media screen and (max-width: 600px)
		padding 5% 6% 0

	&--singleService
		top 2.0625em
		width 100%
		height 4.5em
		transition all .5s ease
		@media screen and (max-width: 1100px)
			position fixed
			top 0
			left 0
			z-index: 2000
			box-sizing: border-box
			width 100%
			height 6.2em
		@media screen and (max-width: 940px)
			padding 0
		@media screen and (max-width: 600px)
			height 4.5em

	&--isScrolled
		position fixed
		top 0
		left 0
		z-index: 2000
		height 6.2em
		padding-bottom 1.2em
		background-color $base-decor-color-dark
		transition all .5s ease

	&__wrap
		flex-container(row, wrap, space-between, flex-end)
		width $base-wrap-element-width
		height 100%
		margin 0 auto
		@media screen and (max-width: 1179px)
			width 94%
			margin: 0
			padding 0 3%
		@media screen and (max-width: 840px)
			width 30em
			margin 0 auto
			padding 0
			justify-content center
		@media screen and (max-width: 490px)
			width 100%

		&--fixed
			@media screen and (max-width: 1100px)
				position: relative
				align-items: center
				justify-content: space-between
				box-sizing: border-box
				width: 100%
				padding: 0 1.25em;
				background-color $base-decor-color-dark

	&__list
		position: relative
		flex-container(row, nowrap, space-between, center)
		width: 70%
		list-style none
		padding: 0
		margin: 0
		@media screen and (max-width: 1100px)
			position absolute
			top 100%
			left 0
			flex-direction column
			align-items center
			width 100%
			min-height 8em;
			padding .5em 0
			background-color rgba($base-decor-color-dark, .8);
			transition: all .4s linear;
			will-change transform
			transform-origin top
			transform translateY(10%) scaleY(1)
			visibility hidden
			opacity 0

		&--isVisible
			transform: translateY(0%) scaleY(1)
			visibility: visible
			opacity: 1
			
	&__list-item
		transition: all .4s ease .4s;
		@media screen and (max-width: 1100px)
			padding: 1em 0 1em 0;

		&--telephone
			font-size: 1.125em;
			transition: all .4s ease
			&:hover
				text-shadow .1em .1em .2em rgba($base-decor-color, .7)
			@media screen and (max-width: 1100px)
				text-align: center

	&__link
		display: block
		text-decoration: none
		font-weight: bold
		color: $base-text-color-light;

	&__btn
		@media screen and (max-width: 840px)
			margin 0 .5em