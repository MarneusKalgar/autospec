/*******************PAGE******************/
.page
	position relative
	z-index 0
	height 100vh
	min-width 20rem
	max-width 120rem
	margin 0 auto
	padding 0
	font normal $base-font-size / $base-line-height $base-font-family
	color $base-text-color
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	background-color: #ccc
	overflow hidden
	::selection
		background rgba($base-decor-color, .5)

	&--singleService
		height auto
		width: 100%
		min-width 19rem
		background-color: #fff;
		overflow-x: hidden
		overflow-y: auto

	&--isModal
		width: 100%
		height: 100%
		overflow: hidden

		
		/***** elem wrap *****/
	&__wrap
		position relative
		flex-container(row, nowrap, space-between, stretch)
		box-sizing border-box
		height 100%
		margin 0
		overflow hidden

		&--element
			background url("../img/main/main-bg.jpg") 0 0 no-repeat
			background-size cover
			&::before
				content: ""
				position: absolute
				z-index: 20
				top: 0
				right: 0
				bottom: 0
				left: 0
				background-color: rgba($base-overlay-element-color, .8)

		&--singleService
			display block
			font-size 1rem

		&--brandLanding
			display: flex
			flex-direction: column
			justify-content: flex-start


	&__frame-wrap
		display: flex
		justify-content: center
		align-items: center
		position: absolute
		top: 0
		right: 0
		bottom: 0
		left: 0
		z-index: 5000
		opacity: 0
		visibility: hidden
		transition: visibility .4s ease, opacity .4s ease, background .4s ease;

		&--isActive
			visibility: visible
			opacity: 1
			background: rgba($base-decor-color-dark,.8); //transition: visibility .3s ease .4s, opacity .3s ease .4s, background .3s ease .4s;

	&__frame-container
		position: relative
		width: 70%
		min-width 20em
		height: 60%
		min-height: 20em
		box-shadow .3em .3em .5em .1em rgba(#000, .5)
		@media screen and (max-width: 768px)
			width: 80%

	&__frame
		display: block
		position: relative
		z-index: 5010
		width: 100%
		max-width 100%
		height: 100%
		max-height 100%
		background: rgba($base-text-color, .8);
		border: none


	&__close
		position absolute
		top 1em
		right 1.3em
		z-index: 5020
		width 1em
		height 1em
		padding 0
		opacity: 1
		outline none
		background rgba(0,0,0,0)
		border none
		&::after
			content: ""
			position: absolute
			top: 50%
			left: 50%
			width: 350%
			height: 350%
			transform: translate(-50%, -50%)
			background: rgba(0,0,0,0)
		&::before
			content: ""
			position: absolute
			top: 55%
			left: 50%
			width: 100%
			height: 100%
			transform: translate(-50%, -50%) scale(1.5)
			background: rgba($base-text-color, .9)
		&:hover
		&:focus
			.page__icon
				fill $base-decor-color

		&--isPlayed
			opacity: 1

	&__icon
		position: relative
		width: 100%
		height: 100%
		z-index: 5030
		fill $base-text-color-light
		transition: all .4s ease;

	&__scrollTop
		position: absolute
		bottom 2em
		right 2em
		z-index: 1000
			
	/***** block to style headings *****/		
.titles
	width 100%
	font $heading-font-weight $heading-font-size / $heading-line-height $heading-font-family
	letter-spacing $heading-letter-spacing
	text-rendering optimizeLegibility
	color $heading-color
	@media screen and (max-width: 450px)
		font-size 2.4em

	&--landing
		font-size: 2.6em;
		line-height: 1.2
		@media screen and (max-width: 450px)
			font-size: 2.2em;

