/*******************PAGE******************/
.page
	position relative
	z-index 0
	height 100vh
	min-height 20rem
	min-width 20rem
	max-width 120rem
	margin 0 auto
	padding 0
	font normal $base-font-size / $base-line-height $base-font-family
	color $base-text-color
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
		//overflow hidden
	@media screen and (max-height: 640px) and (orientation: landscape)
		height 100vh

	&--singleService
		height auto
		overflow-x hidden
		min-width 20rem
		max-width 120rem
		
		/***** elem wrap *****/
	&__wrap
		position relative
		flex-container(row, nowrap, space-between, stretch)
		box-sizing border-box
		height 100%
		margin 0
		overflow hidden
		@media screen and (max-height: 640px), (max-width: 640px), (orientation: landscape)
			overflow-y auto

		&--singleService
			display block
			font-size 1rem
			overflow-y: auto

	&__form-wrap
		display: flex
		justify-content: center
		align-items: center
		position: absolute
		top: 0
		right: 0
		bottom: 0
		left: 0
		z-index: 3000
		transform: translateX(100%)
		will-change transform
		visibility: hidden
		opacity: 0
		transition: transform .4s ease .5s, visibility .4s ease, opacity .4s ease, background .4s ease;

		&--isActive
			transform: translateX(0)
			visibility: visible
			opacity: 1
			background: rgba($base-decor-color-dark,.8);
			transition: transform .3s ease, visibility .3s ease  .4s, opacity .3s ease  .4s, background .3s ease .4s;

	&__scrollTop
		position: absolute
		bottom 2em
		right 2em
		z-index: 1000
			
	/***** block to style headings *****/		
.titles
	width 100%
	font $heading-font-weight $heading-font-size / $heading-line-height $heading-font-family
	letter-spacing $heading-letter-spacing
	text-rendering optimizeLegibility
	color $heading-color
	@media screen and (max-width: 450px)
		font-size 2.4em