/*******************PAGE******************/
.page
	position relative
	z-index 0
	height 100vh
	margin 0
	padding 0
	font normal $base-font-size / $base-line-height $base-font-family
	color $base-text-color
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing antialiased
	overflow hidden
		
		/***** elem wrap *****/
	&__wrap
		position relative
		flex-container(row, nowrap, space-between, stretch)
		box-sizing border-box
		height 100vh
		margin 0
		overflow hidden
			
	/***** block to style headings *****/		
.titles
	width 100%
	font $heading-font-weight $heading-font-size / $heading-line-height $heading-font-family
	letter-spacing $heading-letter-spacing
	text-rendering optimizeLegibility
	color $heading-color