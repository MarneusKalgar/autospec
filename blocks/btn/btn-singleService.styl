/***********************BTN***********************/
.btn
	position relative
	display block
	box-sizing border-box
	color $base-text-color-light
	font-weight bold
	text-decoration none
	text-transform uppercase
	text-align center
	border none
	transition all .5s cubic-bezier(0.2, 1, 0.3, 1)
	outline none
	background rgba(0,0,0,0)

	&--bordered
		z-index 100
		min-height 3.5em
		line-height 3.5em
		padding 0 2.5em 0 3.5em
		font-size .875em
		border 1px solid $base-decor-color
		overflow hidden
		&:before
			content ''
			position absolute
			top 0
			left 0
			z-index -1
			box-sizing border-box
			width 100%
			height 100%
			opacity 0
			background-color $base-decor-color
			transition all .5s cubic-bezier(0.2, 1, 0.3, 1)
			transform-origin top
			transform scaleY(0)
		&:hover
		&:active
		&:focus
			color $base-text-color
			.btn__icon
				fill $base-text-color
				stroke $base-text-color
		&:hover:before
		&:active:before
		&:focus:before
			opacity 1
			transform scaleY(1)

	&--arrow
		.btn__icon
			top 43%
			left 1.7em
		
	&--filled
		z-index 100
		min-height 3.5em
		line-height 3.5em
		padding 0 2em 0 1.5em
		font-size .875em
		border 1px solid $base-decor-color
		overflow hidden
		&:before
			content ''
			position absolute
			top 0
			left 0
			z-index -1
			box-sizing border-box
			width 100%
			height 100%
			background-color $base-decor-color
			transition all .5s cubic-bezier(0.2, 1, 0.3, 1)
			transform-origin top
			transform scaleY(1)
		&:hover:before
		&:active:before
		&:focus:before
			transform scaleY(0)

	&--square
		border-radius: 0

	&--rounded
		border-radius: 2em

	&--white
		color $base-text-color
		border 1px solid $base-text-color-light
		&:before
			background-color $base-text-color-light
		&:hover
			color $base-text-color-light


	&__icon
		position absolute
		width 1em
		fill $base-text-color-light
		stroke $base-text-color-light
		stroke-width 8px
		transition all .5s cubic-bezier(0.2, 1, 0.3, 1)


