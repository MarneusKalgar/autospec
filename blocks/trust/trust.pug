mixin thumbs(items)
	each item in items
		+e.LI.thumbs-item
			+e.IMG.thumbs-img(src=item.src, alt=item.alt)

mixin modals(items)
	+e.UL.modals
		each item in items
			+e.slide
				+e.H3.subtitle= item.subtitle
				+e.IMG.logo(src=item.src, alt=item.alt)
				+e.P.lead= item.lead
				+e.P.info= item.info
				+e.A.link(href=item.href, target="_blank")= item.link
				+e.SPAN.date= item.date

