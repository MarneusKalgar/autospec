/***********************STATISTICS***********************/
.statistics
	position: relative
	padding 2em 0
	background $base-decor-color-light-grey url("../img/statistics/statistics-bg.jpg") 0 0 no-repeat
	background-size cover
	&::before
		content: ""
		position: absolute
		z-index: 10
		top: 0
		right: 0
		bottom: 0
		left: 0
		background-color: rgba(#ebebeb, .9)
	@media screen and (max-width: 799px)
		padding 1em 0

	&__list
		position: relative
		z-index: 20
		flex-container(row, wrap, center, center)
		margin 0
		padding 0
		list-style none
		color #000

	&__item
		width 14em
		margin 2em 5em
		@media screen and (max-width: 1179px)
			margin 2em 2%
		@media screen and (max-width: 520px)
			margin 1em 2%

	&__caption
		margin 0
		font-size 3em
		font-weight bold
		color $base-decor-color

	&__text
		margin 0
