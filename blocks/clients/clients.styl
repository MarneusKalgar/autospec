/***********************CLIENTS***********************/
.clients
	flex 1
	flex-container(row, wrap, space-between, flex-start)
	align-content flex-start
	//height 100vh
	padding 7em 6% 3% 7.5%
	box-sizing border-box
	font-size 1rem
	overflow hidden
	background #fff url("../img/clients/clients-bg-lg.jpg") 0 0 no-repeat
	background-size cover
	@media screen and (max-height: 640px)
		overflow auto
	@media screen and (min-width: 941px) and (max-width: 1090px)
		padding-right 3%
		overflow auto
	@media screen and (max-width: 940px)
		overflow auto
	@media screen and (max-width: 800px)
		padding-left 3.75em
	@media screen and (max-width: 600px)
		padding 6em 1.25em 3.75em 2.8em

	&--isOverlay
		&::before
			content ""
			position absolute
			top 0
			left 0
			z-index 200
			width 100%
			height 100%
			background rgba(#000, .4)

	&__title
		width 100%
		margin .85em 0 0
		@media screen and (max-height: 750px)
			margin-top .3em
		@media screen and (min-width: 941px) and (max-width: 1090px), (max-width: 700px)
			font-size 2.4em
		@media screen and (max-width: 450px)
			font-size 1.8em

	&__lead
		width 100%
		margin .7em 0 0
		font-size 1.5em
		font-weight bold
		@media screen and (min-width: 941px) and (max-width: 1120px), (max-width: 700px)
			font-size 1.2em

	&__list
		width 60%
		margin 1.3em .8em 0 0
		padding 0
		list-style none
		@media screen and (min-width: 941px) and (max-width: 1090px), (max-width: 700px)
			width 55%
			font-size .9em
		@media screen and (max-width: 600px)
			width 100%
			margin-right 0

	&__item
		position relative
		margin-top 1.5em
		&:before
			content ''
			position absolute
			top -.7em
			left -1.1em
			font-size 3em
			font-weight bold
			color rgba($base-decor-color, .2)
			@media screen and (max-width: 600px)
				font-size 2.5em
				top -.6em
		&:nth-child(1)
			margin-top 0
			&:before
				content '01'
		&:nth-child(2)
			&:before
				content '02'
		&:nth-child(3)
			&:before
				content '03'

	&__strong
		font-weight bold

	&__form
		width 32%
		min-width 12.5em
		@media screen and (max-width: 600px)
			width 100%
			margin-top 2em

	&__set
		position relative
		margin 0
		padding 0
		border none
		&:nth-child(1)
			.clients__label
				top .6em
				left .7em
			label.error
				top -2.2em
		&:nth-child(2)
			margin-top 1em
			.clients__label
				top .65em
				left .7em
		&:nth-child(3)
			margin-top 3.6em
			.clients__label
				top 1.35em
				left .7em
		&:nth-child(4)
			margin-top 3.2em


	&__input
		display block
		box-sizing border-box
		width 100%
		padding .4em .5em .4em 2em
		border none
		border-bottom: .0625em solid #2e2e2e
		background rgba(0,0,0,0)
		outline none
		transition all .3s
		&:nth-of-type(2)
			margin-top 1.5em
		&:hover
		&:focus
			background rgba(darken(#fff, 2%), .5)

	&__write
		display block
		box-sizing border-box
		width 100%
		height 8.75em
		padding .2em 1em .5em 2em
		line-height 3em
		border none
		background rgba(0,0,0,0)
		outline none
		resize none
		transition all .3s
		background-image linear-gradient(top, transparent, transparent 2.9375em, #2e2e2e 0)
		background-size 100% 3em
		background-position 0 2.7em

	&__label
		display block
		position absolute
		z-index 100
		top 0
		left 0
		width .8em
		height .8em
		background-size cover
		&:before
			width 100%
			height 100%

		&--wrap
			position relative
			width 100%
			height 100%
			&:before
				content ''
				position absolute
				top 0
				left 0
				width 100%
				height 100%
				z-index -1
				background $base-decor-color
				transform-origin top
				transform scaleY(0)
				transition transform .5s cubic-bezier(0.2, 1, 0.3, 1)
			&:hover
			&:focus
				color #363636
			&:hover:before
			&:focus:before
				transform scaleY(1)

	&__btn
		width 100%

		//error messages
	label.error
		display block
		position absolute
		left 0
		width 100%
		height 1.5em
		font-size .875em
		color lighten(#6f1400, 30%)
