		+e.FORM.form#clientsForm(method="POST", action="#", name="price")
			+e.FIELDSET.set
				+e.LABEL.label(for="username" class="svgicon --person")
				+e.INPUT.input(type="text", id="username", name="username", aria-required="true", placeholder="Введите ваше имя")
			+e.FIELDSET.set
				+e.LABEL.label(for="usermail" class="svgicon --envelope")
				+e.INPUT.input(type="email", id="usermail", name="usermail", aria-required="true", placeholder="Введите вашу почту")
			+e.FIELDSET.set
				+e.LABEL.label(for="usermessage" class="svgicon --pencil")
				+e.TEXTAREA.write(id="usermessage", name="usermessage", aria-required="true", placeholder="Напишите нам")
			+e.FIELDSET.set
				+e.LABEL.label(class="--wrap")
					+e.INPUT.btn(type="submit", id="price-submit" class="btn --price --bordered", value="получить прайс")