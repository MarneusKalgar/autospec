/***********************MATERIALS***********************/
.materials
	margin 0
	padding 3.5em 0

	&__wrap
		width $base-wrap-element-width
		margin 0 auto

	&__title
		margin 0
		@media screen and (max-width: 1500px)
			margin 0

	&__list
		flex-container(row, wrap, center, center)
		margin 1.5em auto 0
		padding 0
		list-style none

	&__item
		flex-container(row, wrap, center, center)
		width 12.5em
		height 4.25em
		margin 1em 7%
		@media screen and (max-width: 1500px)
			margin 1em 4%

	&__img
		display block
		margin 0 auto
		max-width 100%
		height auto