/***********************MATERIALS***********************/
.materials
	margin 0
	padding 3.5em 0
	animation-duration 1.5s
	animation-delay 0s

	&__wrap
		width $base-wrap-element-width
		margin 0 auto
		@media screen and (max-width: 1199px)
			box-sizing border-box
			width 100%
			padding 0 1.25em

	&__title
		margin 0
		@media screen and (max-width: 1199px)
			width 100%
		@media screen and (max-width: 569px)
			font-size 2.4em
		@media screen and (max-width: 449px)
			text-align center

	&__list
		flex-container(row, wrap, center, center)
		margin 1.5em auto 0
		padding 0
		list-style none

	&__item
		flex-container(row, wrap, center, center)
		width 12.5em
		min-height 4.25em
		margin 1em 7%
		@media screen and (max-width: 1500px)
			margin 1em 4%
		@media screen and (max-width: 860px)
			margin 2em 4%

	&__img
		display block
		margin 0 auto
		max-width 100%
		height auto